generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  OPERATOR
}

model User {
  id String @id @default(uuid())

  name     String
  email    String   @unique
  password String
  role     UserRole @default(OPERATOR)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  entryRecords ParkingRecord[] @relation("EntryCreator")
  exitRecords  ParkingRecord[] @relation("ExityCreator")
}

model PriceConfig {
  id String @id @default(uuid())

  firstHourPrice      Decimal @db.Decimal(10, 2)
  additionalHourPrice Decimal @db.Decimal(10, 2)
  isActive            Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ParkingStatus {
  ACTIVE
  FINISHED
}

model ParkingRecord {
  id String @id @default(uuid())

  plate      String
  model      String
  color      String
  exitAt     DateTime?
  totalValue Decimal?      @db.Decimal(10, 2)
  status     ParkingStatus @default(ACTIVE)

  entryUserId String
  exitUserId  String?

  entryUser User  @relation("EntryCreator", fields: [entryUserId], references: [id])
  exitUser  User? @relation("ExityCreator", fields: [exitUserId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
